{% extends "base.html.twig" %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('ajouterStructure') }}
{% endblock %}

{% block body %}
<div class="container">
    <div>
        <a class="btn btn-secondary float-end " href='/partenaire/{{ partenaire.getId }}'>Retour</a>
        <h1 class="text-center fw-light fs-3 mt-3 mb-5">Ajouter une nouvelle structure</h1>
    </div>
    <form id="ajouterStructureForm" class="row row-cols-1 row-cols-md-2 mb-3 g-5">
        <div class="">
            <div class="col mb-4">
                <h5>Client ID : <span class="fw-light fs-5"> {{ client.getId }}</span></h5>
                <h5>Client email : <span id="clientEmail" class="fw-light fs-5">{{ client.getEmail }}</span></h5>
                <h5 class="">Partenaire :
                    <a href="/partenaire/{{ partenaire.getId }}" class="text-decoration-none text-reset fw-light fs-5">{{ partenaire.getFranchiseName }}</a>
                </h5>
            </div>
            <div class="d-flex flex-column justify-content-between">
                <div class="">
                    <label class="form-label" for="address">Adresse</label>
                    <input type="text" class="form-control" name="address" id="address">
                    <div id="addressError"></div>
                </div>
                <div class="mt-3">
                    <label class="form-label" for="postalCode">Code postal</label>
                    <input type="text" class="form-control" name="postalCode" id="postalCode">
                    <div id="postalCodeError"></div>
                </div>
                <div class="mt-3">
                    <label class="form-label" for="city">Ville</label>
                    <input type="text" class="form-control" name="city" id="city">
                    <div id="cityError"></div>
                </div>
                <button id= "ajouterStructureBtn" type="submit" class="btn btn-primary mx-auto my-3 w-50">Ajouter</button>
                <input id="inputPartenaireId" hidden value="{{ partenaire.getId }}">
            </div>
        </div>
        <div class="rounded bg-light p-3 mb-3 shadow-sm ">
            <h4 class="fw-light fs-4">Permissions par d√©faut</h4>
            <div class="row row-cols-1 row-cols-xl-2 mt-1 mx-5 mx-lg-auto">
            {% for key, value in defaultPermissions  %}
                <div class="permissions form-check form-switch">
                    <input class="perm form-check-input me-2"
                           type="checkbox"
                           role="switch"
                           id={{ key }}
                            {{ value ? 'checked' : '' }}>
                    <label class="form-check-label" for={{ value }}>{{ key }}</label>
                </div>
            {% endfor %}
            </div>
        </div>
    </form>
</div>
{% endblock %}