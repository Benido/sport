{% extends "base.html.twig" %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('ajouterStructure') }}
{% endblock %}

{% block body %}
<div class="container">
    <h1 class="mb-5">Ajouter une nouvelle structure</h1>
    <form id="ajouterStructureForm" class="d-flex justify-content-evenly">
        <div class="grid grid-cols-2">
            <div class="col-12 mb-4">
                <h5>Client ID : {{ client.getId }}</h5>
                <h5>Client email : <span id="clientEmail">{{ client.getEmail }}</span></h5>
                <h5 class="mt-3">Partenaire :
                    <a href="/partenaire/{{ partenaire.getId }}" class="text-decoration-none text-reset">{{ partenaire.getFranchiseName }}</a>
                </h5>

            </div>
            <div class="d-flex flex-column justify-content-between">
                <div class="">
                    <label class="form-label" for="address">Adresse</label>
                    <input type="text" class="form-control" name="address" id="address">
                    <div id="addressError"></div>
                </div>
                <div class="">
                    <label class="form-label" for="postalCode">Code postal</label>
                    <input type="text" class="form-control" name="postalCode" id="postalCode">
                    <div id="postalCodeError"></div>
                </div>
                <div class="">
                    <label class="form-label" for="city">Ville</label>
                    <input type="text" class="form-control" name="city" id="city">
                    <div id="cityError"></div>
                </div>
                <button id= "ajouterStructureBtn" type="submit" class="btn btn-primary mx-auto my-3 w-50">Ajouter</button>
                <input id="inputPartenaireId" hidden value="{{ partenaire.getId }}">
            </div>
        </div>
        <div class="d-flex flex-column">
            <h4>Permissions </h4>
            {% for key, value in defaultPermissions  %}
                <div class="permissions form-check form-switch">
                    <input class="perm form-check-input"
                           type="checkbox"
                           role="switch"
                           id={{ key }}
                            {{ value ? 'checked' : '' }}>
                    <label class="form-check-label" for={{ value }}>{{ key }}</label>
                </div>
            {% endfor %}
        </div>
    </form>
</div>
{% endblock %}