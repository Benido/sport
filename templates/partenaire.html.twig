{% extends "base.html.twig" %}

{% block body %}
    <h2>Hello {{ app.user.email }}</h2>
    <div class="container">
        <div>
            <p>{{ partenaire.getFranchiseName }} : {{ partenaire.isActive ? '+' : '-' }}</p>
            <div>
                <h4>Permissions par d√©faut</h4>
                {% for key, value in permissions  %}
                <div class="permissions form-check form-switch">
                    <input class="perm form-check-input"
                           type="checkbox"
                           role="switch"
                           id={{ key }}
                            {{ value ? 'checked' : '' }}>
                    <label class="form-check-label" for={{ value }}>{{ key }}</label>
                </div>
                {% endfor %}
            </div>
        </div>
        <div id="searchBlock">Rechercher</div>
        <div id="StructuresDisplayBlock">
            {% for structure in structures %}
                <a  href={{ path('app_structure', {id: structure.getId}) }}>
                    <div>
                        <p>{{ structure.isActive ? '+' : '-' }}</p>
                        <p>{{ structure.getAddress }}</p>
                        <p>{{ structure.getPostalCode }} {{ structure.getCity }}</p>
                        <br>
                    </div>
                </a>
            {% endfor %}
        </div>
    </div>
{% endblock %}